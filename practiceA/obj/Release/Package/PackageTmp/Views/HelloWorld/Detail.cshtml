@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var i = 1;
}
@Styles.Render("~/Content/jack.css")
<h2>Detail</h2><button>@Html.ActionLink("Back", "Welcome", "HelloWorld")</button>
<table class="errorFont" border="2px">
    <tr>
        <td width="70px;">Number</td>
        <td width="40px;">Step</td>
        <td width="200px;">Date</td>
        <td width="120px;">MesaageTag</td>
        <td width="160px;">Mesaage</td>
        <td>Element</td>
    </tr>
    @foreach (var temp in ViewBag.Log)
    {
         <tr style="@Html.Raw(ViewBag.changeBackgroundColor(i, true, temp.MsgTag))">
             <td>@i</td>
             <td>@temp.Step</td>
             <td>@temp.Date</td>
             <td>@temp.MsgTag</td>
             <td>@temp.Msg</td>
             <td style="overflow-x: auto; text-align: left;">@temp.Element</td>
        </tr>
        i++;
    }
</table>



